while_loop_test{
    sum = 0;
    while((sum < 10)){
        sum = (sum + 1);
    }
    println("Successfully reached end of while loop. Sum should be 10:\t", itos(sum));

    println("Testing breaking from while loop");
    count = 0;
    breakOn = 4;
    broke = false;
    while((count < 10)){
        count = (count + 1);
        if((count == breakOn)){
            broke = true;
            break();
        }
    }

    if(broke){
        println("Successfully broke");
    }
    else{
        println("Failed to break");
    }

    return();
}

